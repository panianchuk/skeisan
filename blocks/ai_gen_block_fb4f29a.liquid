{% doc %}
  @prompt
    A rich text editor to have heading, image and paragraph
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-rich-text-editor-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    padding: {{ block.settings.padding }}px;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-rich-text-editor__heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-family: {{ block.settings.heading_font.family }}, {{ block.settings.heading_font.fallback_families }};
    font-weight: {{ block.settings.heading_font.weight }};
    font-size: {{ block.settings.heading_size }}px;
    line-height: 1.2;
    margin: 0 0 {{ block.settings.element_spacing }}px 0;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-rich-text-editor__image-wrapper-{{ ai_gen_id }} {
    margin: {{ block.settings.element_spacing }}px 0;
    text-align: {{ block.settings.image_alignment }};
  }

  .ai-rich-text-editor__image-{{ ai_gen_id }} {
    max-width: 100%;
    height: auto;
    border-radius: {{ block.settings.image_border_radius }}px;
    box-shadow: 0 {{ block.settings.image_shadow_vertical }}px {{ block.settings.image_shadow_blur }}px rgba(0, 0, 0, {{ block.settings.image_shadow_opacity | divided_by: 100.0 }});
  }

  .ai-rich-text-editor__image-placeholder-{{ ai_gen_id }} {
    display: inline-block;
    background-color: #f4f4f4;
    border-radius: {{ block.settings.image_border_radius }}px;
    box-shadow: 0 {{ block.settings.image_shadow_vertical }}px {{ block.settings.image_shadow_blur }}px rgba(0, 0, 0, {{ block.settings.image_shadow_opacity | divided_by: 100.0 }});
  }

  .ai-rich-text-editor__image-placeholder-{{ ai_gen_id }} svg {
    width: {{ block.settings.placeholder_width }}px;
    height: {{ block.settings.placeholder_height }}px;
    display: block;
  }

  .ai-rich-text-editor__paragraph-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-family: {{ block.settings.text_font.family }}, {{ block.settings.text_font.fallback_families }};
    font-weight: {{ block.settings.text_font.weight }};
    font-size: {{ block.settings.text_size }}px;
    line-height: {{ block.settings.line_height }};
    margin: {{ block.settings.element_spacing }}px 0 0 0;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-rich-text-editor__paragraph-{{ ai_gen_id }} p {
    margin: 0 0 1em 0;
  }

  .ai-rich-text-editor__paragraph-{{ ai_gen_id }} p:last-child {
    margin-bottom: 0;
  }

  .ai-rich-text-editor__paragraph-{{ ai_gen_id }} strong {
    font-weight: 600;
  }

  .ai-rich-text-editor__paragraph-{{ ai_gen_id }} em {
    font-style: italic;
  }

  .ai-rich-text-editor__paragraph-{{ ai_gen_id }} a {
    color: {{ block.settings.link_color }};
    text-decoration: underline;
  }

  .ai-rich-text-editor__paragraph-{{ ai_gen_id }} a:hover {
    color: {{ block.settings.link_hover_color }};
  }

  .ai-rich-text-editor__paragraph-{{ ai_gen_id }} ul,
  .ai-rich-text-editor__paragraph-{{ ai_gen_id }} ol {
    margin: 1em 0;
    padding-left: 1.5em;
  }

  .ai-rich-text-editor__paragraph-{{ ai_gen_id }} li {
    margin-bottom: 0.5em;
  }

  .ai-rich-text-editor__paragraph-{{ ai_gen_id }} blockquote {
    border-left: 4px solid {{ block.settings.heading_color }};
    padding-left: 1em;
    margin: 1em 0;
    font-style: italic;
    opacity: 0.8;
  }

  @media screen and (max-width: 749px) {
    .ai-rich-text-editor-{{ ai_gen_id }} {
      padding: {{ block.settings.padding | times: 0.7 }}px;
    }

    .ai-rich-text-editor__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .ai-rich-text-editor__paragraph-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.9 }}px;
    }

    .ai-rich-text-editor__image-placeholder-{{ ai_gen_id }} svg {
      width: {{ block.settings.placeholder_width | times: 0.8 }}px;
      height: {{ block.settings.placeholder_height | times: 0.8 }}px;
    }
  }
{% endstyle %}

<div class="ai-rich-text-editor-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.heading != blank %}
    <h2 class="ai-rich-text-editor__heading-{{ ai_gen_id }}">
      {{ block.settings.heading }}
    </h2>
  {% endif %}

  {% if block.settings.image != blank %}
    <div class="ai-rich-text-editor__image-wrapper-{{ ai_gen_id }}">
      <img
        src="{{ block.settings.image | image_url: width: 1200 }}"
        alt="{{ block.settings.image.alt | escape }}"
        class="ai-rich-text-editor__image-{{ ai_gen_id }}"
        loading="lazy"
        width="{{ block.settings.image.width }}"
        height="{{ block.settings.image.height }}"
      >
    </div>
  {% elsif block.settings.show_placeholder %}
    <div class="ai-rich-text-editor__image-wrapper-{{ ai_gen_id }}">
      <div class="ai-rich-text-editor__image-placeholder-{{ ai_gen_id }}">
        {{ 'image' | placeholder_svg_tag }}
      </div>
    </div>
  {% endif %}

  {% if block.settings.paragraph != blank %}
    <div class="ai-rich-text-editor__paragraph-{{ ai_gen_id }}">
      {{ block.settings.paragraph }}
    </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "Rich text editor",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "inline_richtext",
      "id": "heading",
      "label": "Heading",
      "default": "Rich text heading"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "checkbox",
      "id": "show_placeholder",
      "label": "Show placeholder when no image",
      "default": true
    },
    {
      "type": "richtext",
      "id": "paragraph",
      "label": "Paragraph text",
      "default": "<p>Use this text to share information about your brand with your customers. Describe a product, share announcements, or welcome customers to your store.</p>"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "max_width",
      "min": 400,
      "max": 1200,
      "step": 50,
      "unit": "px",
      "label": "Maximum width",
      "default": 800
    },
    {
      "type": "range",
      "id": "padding",
      "min": 0,
      "max": 80,
      "step": 4,
      "unit": "px",
      "label": "Padding",
      "default": 40
    },
    {
      "type": "range",
      "id": "element_spacing",
      "min": 8,
      "max": 60,
      "step": 4,
      "unit": "px",
      "label": "Element spacing",
      "default": 24
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left"
    },
    {
      "type": "select",
      "id": "image_alignment",
      "label": "Image alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "header",
      "content": "Heading style"
    },
    {
      "type": "font_picker",
      "id": "heading_font",
      "label": "Heading font",
      "default": "montserrat_n6"
    },
    {
      "type": "range",
      "id": "heading_size",
      "min": 16,
      "max": 60,
      "step": 2,
      "unit": "px",
      "label": "Heading size",
      "default": 32
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading color",
      "default": "#1d1d1b"
    },
    {
      "type": "header",
      "content": "Text style"
    },
    {
      "type": "font_picker",
      "id": "text_font",
      "label": "Text font",
      "default": "inter_n5"
    },
    {
      "type": "range",
      "id": "text_size",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Text size",
      "default": 16
    },
    {
      "type": "range",
      "id": "line_height",
      "min": 1,
      "max": 2,
      "step": 0.1,
      "label": "Line height",
      "default": 1.5
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#1d1d1b"
    },
    {
      "type": "color",
      "id": "link_color",
      "label": "Link color",
      "default": "#334fb4"
    },
    {
      "type": "color",
