    {
      "type": "range",
      "id": "border_radius",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Border radius",
      "default": 0
    }
  ],
  "presets": [
    {
      "name": "Rich text editor"
    }
  ]
}
{% endschema %}