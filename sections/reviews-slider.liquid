<section class="reviews-slider">
  <div class="page-width">
    {% if section.settings.rating_text != blank %}
      <div class="rating_text">
        <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M11.3671 3.36242C10.8184 2.21253 9.1816 2.21253 8.6329 3.36242L6.94903 6.89124L3.07258 7.40223C1.80941 7.56874 1.30361 9.12542 2.22767 10.0026L5.06343 12.6945L4.35152 16.5392C4.11954 17.792 5.44374 18.754 6.56354 18.1463L10 16.2812L13.4365 18.1463C14.5563 18.754 15.8805 17.792 15.6485 16.5392L14.9366 12.6945L17.7723 10.0026C18.6964 9.12542 18.1906 7.56874 16.9274 7.40223L13.051 6.89124L11.3671 3.36242Z" fill="#BCB082"/>
        </svg>
        {{ section.settings.rating_text }}
      </div>
    {% endif %}
    {% if section.settings.heading != blank %}
      <div class="reviews-slider__heading">
