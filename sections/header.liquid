<script>
  // __define-ocg__
  {% comment %} document.addEventListener('DOMContentLoaded', function () {
    const sectionHeader = document.querySelector('.section-header');
    const headerWrapper = document.querySelector('.header-wrapper');

    if (!sectionHeader || !headerWrapper) return;

    const originalClass = headerWrapper.getAttribute('data-index-color');

    // âœ… If data-index-color is not set, exit early
    if (!originalClass) return;

    const observer = new MutationObserver(() => {
      const isSticky = sectionHeader.classList.contains('shopify-section-header-sticky');

      if (isSticky) {
        if (headerWrapper.classList.contains(originalClass)) {
          headerWrapper.classList.remove(originalClass);
        }
        {% comment %} headerWrapper.classList.add('color-scheme-7'); {% endcomment %}
      } else {
        {% comment %} headerWrapper.classList.remove('color-scheme-7'); {% endcomment %}
        if (!headerWrapper.classList.contains(originalClass)) {
          headerWrapper.classList.add(originalClass);
        }
      }
    });

    observer.observe(sectionHeader, {
      attributes: true,
      attributeFilter: ['class']
    });
  }); {% endcomment %}
</script>

