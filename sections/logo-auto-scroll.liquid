{% comment %}
Logo Auto Scroll Section
{% endcomment %}

<style>
  .logo-scroll-section {
    {% comment %} overflow: hidden; {% endcomment %}
    padding: 20px 0;
    background: {{ section.settings.bg_color }};
  }

  .logo-scroll-track {
    {% comment %} display: flex; {% endcomment %}
    {% comment %} gap:160px;
    animation: scroll-logos linear infinite;
    animation-duration: {{ section.settings.scroll_speed }}s; {% endcomment %}
  }

  .logo-scroll-track img {
    {% comment %} height: {{ section.settings.logo_height }}px; {% endcomment %}
     display: block;
 
    object-fit: contain;
    flex-shrink: 0;
  }
.logo-scroll-track .swiper-slide{
  width: auto;
  line-height:1;
}
  {% comment %} @keyframes scroll-logos {
    0% { transform: translateX(0); }
    100% { transform: translateX(-50%); }
  } {% endcomment %}
</style>

<div class="logo-scroll-section">
  <div class="logo-scroll-track swiper">
    <div class="swiper-wrapper">
 {%  for i in (1..3) %}
    {% for block in section.blocks %}
      {% if block.settings.logo_image %}
        <div class="swiper-slide">
        <img src="{{ block.settings.logo_image | image_url: width: 300 }}" alt="Logo {{ forloop.index }}" height="{{ block.settings.logo_image.height | divided_by : 2}}px">
        </div>
      {% endif %}
    {% endfor %}
     {% endfor %}
</div>
  </div>
</div>
<script>
  document.addEventListener("DOMContentLoaded", function () {
    if (typeof Swiper === 'undefined') return;

    var container = document.querySelector('.logo-scroll-track');
    if (!container) return;

  var swiper = new Swiper(container, {
  slidesPerView: 'auto',
  spaceBetween: 150,
  loop: true,
  speed: 4000,
  autoplay: {
    delay: 0,
    disableOnInteraction: false
  },
  grabCursor: true,
  allowTouchMove: true,
  breakpoints: {
    768: { // tablet and up
      spaceBetween: 150
    },
    0: { // mobile
      spaceBetween: 70
    }
  }
});


    // Pause autoplay while user interacts, resume after
    {% comment %} container.addEventListener('mouseenter', function () { swiper.autoplay.stop(); });
    container.addEventListener('mouseleave', function () { swiper.autoplay.start(); });
    swiper.on('touchStart', function () { swiper.autoplay.stop(); });
    swiper.on('touchEnd', function () { swiper.autoplay.start(); }); {% endcomment %}
  });
</script>



{% schema %}
{
  "name": "Logo Auto Scroll",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background color",
      "default": "#ffffff"
    },
    {
      "type": "number",
      "id": "logo_height",
      "label": "Logo height (px)",
      "default": 50
    },
    {
      "type": "number",
      "id": "scroll_speed",
      "label": "Scroll speed (seconds)",
      "default": 20
    }
  ],
  "blocks": [
    {
      "type": "logo",
      "name": "Logo",
      "settings": [
        {
          "type": "image_picker",
          "id": "logo_image",
          "label": "Logo image"
        }
      ]
    }
  ],
  "max_blocks": 20,
  "presets": [
    {
      "name": "Logo Auto Scroll",
      "category": "Brand"
    }
  ]
}
{% endschema %}
