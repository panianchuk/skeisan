{% comment %}theme-check-disable ImgLazyLoading{% endcomment %}
{{ 'component-collection-hero.css' | asset_url | stylesheet_tag }}

{%- style -%}
.variant_pack {
  display : none;
}
  @media screen and (max-width: 749px) {
    .collection-hero--with-image .collection-hero__inner {
      padding-bottom: calc({{ settings.media_shadow_vertical_offset | at_least: 0 }}px + 2rem);
    }
  }
{%- endstyle -%}

<div class="collection-hero  collection-hero--with-image color-{{ section.settings.color_scheme }} gradient">
  <div class="collection-hero__inner  {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
    <div class="collection-hero__text-wrapper">
      <h2 class="collection-hero__title">
        <span class="visually-hidden">{{ 'sections.collection_template.title' | t }}: </span>
        {{- collection.title | escape -}}
      </h2>

      {%- if section.settings.show_collection_description -%}
        <div class="collection-hero__description rte">
          {% if collection.description != blank %}
            {{ collection.description }}
          {% else %}
          {{ section.settings.show_collection_description_text }}
          {% endif %}
          </div>
      {%- endif -%}
    </div>
    {% assign isavailableimage = false %}
    {% if section.settings.show_collection_image %}
    {% if template.suffix == 'teas' %}
      {% if collection.metafields.custom.softpack_banner_image != blank %}
        {% assign isavailableimage = true %}
        <div class="collection-hero__image-container variant_pack media gradient" data-variant="softpack">
          <img src="{{ collection.metafields.custom.softpack_banner_image | img_url : 'master' }}">
        </div>
      {% endif %}

      {% if collection.metafields.custom.jar_banner_image!= blank %}
        {% assign isavailableimage = true %}
        <div class="collection-hero__image-container variant_pack media gradient" data-variant="jar">
          <img src="{{ collection.metafields.custom.jar_banner_image | img_url : 'master' }}">
        </div>
      {% endif %}
    {%- elsif section.settings.show_collection_image and collection.image -%}
      {% assign isavailableimage = true %}
      <div class="collection-hero__image-container media gradient">
        <img src="{{ collection.image | img_url : 'master' }}">
      </div>
    {% elsif section.settings.show_collection_image and section.settings.image != blank %}
      {% assign isavailableimage = true %}
      {% comment %} <div class="collection-hero__image-container media gradient">
        <img
          srcset="
            {%- if section.settings.image.width >= 165 -%}{{ section.settings.image | image_url: width: 165 }} 165w,{%- endif -%}
            {%- if section.settings.image.width >= 360 -%}{{ section.settings.image | image_url: width: 360 }} 360w,{%- endif -%}
            {%- if section.settings.image.width >= 535 -%}{{ section.settings.image | image_url: width: 535 }} 535w,{%- endif -%}
            {%- if section.settings.image.width >= 750 -%}{{ section.settings.image | image_url: width: 750 }} 750w,{%- endif -%}
            {%- if section.settings.image.width >= 1070 -%}{{ section.settings.image | image_url: width: 1570 }} 1470w,{%- endif -%}
            {%- if section.settings.image.width >= 1500 -%}{{ section.settings.image | image_url: width: 1500 }} 1500w,{%- endif -%}
            {{ section.settings.image | image_url }} {{ section.settings.image.width }}w
          "
          src="{{ section.settings.image | image_url: width: 750 }}"
          sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px, (min-width: 750px) calc(50vw - 130px), calc(50vw - 55px)"
          alt="{{ section.settings.image.alt | escape }}"
          width="{{ section.settings.image.width }}"
          height="{{ section.settings.image.height }}"
        >
      </div> {% endcomment %}
    {%- endif -%}
    {%- endif -%}
  </div>
</div>

<style>
      {% if isavailableimage %}
      .collection-hero__image-container {
          width: 100%;
      margin: 0;
      flex: 1;
      }
      .collection-hero__text-wrapper {
        top: 50%;
      flex: 1;
      left: 50%;
      {% comment %} transform: translateY(-50%); {% endcomment %}
      z-index: 1;
      {% comment %} position: absolute; {% endcomment %}
      {% comment %} padding: 0 !important; {% endcomment %}
      {% comment %} padding-block: 2rem !important; {% endcomment %}
      {% comment %} transform: translate(-50%, -50%); {% endcomment %}
              {% comment %} text-align: center; {% endcomment %}
      }
       {% endif %}
      .collection-hero__inner {
      position:relative;
    }
    .collection-hero__title {


      /* font-size: 48px; */
      line-height: 100%;
      letter-spacing: 0px;
      text-transform: uppercase;
    }
    .collection-hero__description {
     font-family: var(--font-heading-family);
     line-height: 1.5;
    }
    .collection-hero__title {
        color: #1D1D1B;
    }
    .collection-hero__description {
     color: #1D1D1B;
    }
    .collection-hero__image-container {
     border : none !important;
    }
    .collection-hero__image-container img {
     position : static !important;
    }
      @media (min-width: 750px) {
      .collection-hero__image-container {
          {% comment %} align-self: stretch; {% endcomment %}
          {% comment %} flex: 1 0 50%; {% endcomment %}
          {% comment %} margin-left: 3rem; {% endcomment %}
          {% comment %} min-height: 40rem; {% endcomment %}
      }
      .collection-hero.collection-hero--with-image {
      padding-top: 0 !important;
    }
    .collection-hero__title {
       font-size: 40px;
    line-height: 100%;
    letter-spacing: 0px;
    text-transform: uppercase;
    }
    }
    @media (max-width:749px) {
      .collection-hero__text-wrapper {
     flex: 1 !important;
      width: 100%;
      padding-inline: 15px !important;
      bottom: 0;
      text-align: center;
      top: unset !important;
      {% comment %} transform: translateX(-50%); {% endcomment %}
    }
    .collection-hero__image-container {
        {% comment %} min-height: 35rem !important; {% endcomment %}
    }
  }
</style>

{% schema %}
{
  "name": "t:sections.main-collection-banner.name",
  "class": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "paragraph",
      "content": "t:sections.main-collection-banner.settings.paragraph.content"
    },
    {
      "type": "checkbox",
      "id": "show_collection_description",
      "default": true,
      "label": "t:sections.main-collection-banner.settings.show_collection_description.label"
    },
     {
      "type": "text",
      "id": "show_collection_description_text",
      "label": "Description"
    },
    {
      "type": "checkbox",
      "id": "show_collection_image",
      "default": false,
      "label": "t:sections.main-collection-banner.settings.show_collection_image.label"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    }
  ]
}
{% endschema %}
