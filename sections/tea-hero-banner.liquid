{% comment %}
Tea Hero Section
{% endcomment %}

<div class="page-width" --{{ request.path }}>
<div class="tea-hero-section">
  <div class="tea-hero-content">

    <!-- Main Heading -->
    <div class="main-heading">
      <h1 class="heading-line-1">{{ section.settings.heading_line_1 }}</h1>
      <h1 class="heading-line-2">{{ section.settings.heading_line_2 }}</h1>
    </div>

    <!-- Subtext -->
    <div class="subtext">
      <p>{{ section.settings.description }}</p>
    </div>

    <!-- CTA Button -->
    <div class="cta-section">
      <a href="{{ section.settings.button_url }}" class="shop-button ">
        {{ section.settings.button_text }}
        <span class="arrow"><svg width="21" height="20" viewBox="0 0 21 20" fill="none" xmlns="http://www.w3.org/2000/svg">
<path d="M18 10L11.75 3.75L10.8688 4.63125L15.6062 9.375L3 9.375L3 10.625L15.6062 10.625L10.8687 15.3687L11.75 16.25L18 10Z" fill="white"/>
</svg>
</span>
      </a>
    </div>

    <!-- Product Images -->
    <div class="product-showcase">
        {% if section.settings.product_image_1 %}
       
    {% comment %} <img src="{{ section.settings.product_image_1 | image_url: width: 1440, height: 653 }}" alt="Tea Product 1"> {% endcomment %}
     <img src="{{ section.settings.product_image_1 | img_url : 'master' }}" alt="Tea Product 1">

           
         
        {% endif %}
      
    </div>
  </div>
</div>
</div>
<style>
.tea-hero-section {

  display: flex;
  align-items: center;
  justify-content: center;

  position: relative;
  overflow: hidden;
  padding-block : 48px;
}

.tea-hero-content {
  width: 100%;
  text-align: center;
  position: relative;
  z-index: 2;
}

/* Main Heading */
.main-heading {
  margin-bottom: 16px;
}

.heading-line-1,
.heading-line-2 {
  font-size: 56px;
  font-weight: 700;
  line-height: 1;
  margin: 0;
  text-transform: uppercase;
}
.heading-line-2 {
  font-size: 80px;
  font-weight: 600;
}



/* Subtext */
.subtext {
  margin-bottom: 40px;
  animation: fadeInUp 0.8s ease-out 0.4s both;
}

.subtext p {
    font-size: 14px;
    color: #686869;
    line-height: 1.5;
    max-width: 275px;
    margin: 0 auto;
    font-weight: 400;
}

/* CTA Button */


.shop-button {
 display: inline-flex;
    align-items: center;
    gap: 10px;
    background: #1D1D1B;
    color: white;
    padding: 12px 18px;
    border-radius: 50px;
    text-decoration: none;
    font-weight: 500;
    font-size: 13px;
    letter-spacing: 1px;
    text-transform: uppercase;
    transition: all 0.3s ease;
    line-height: 1;
    font-family: var(--font-heading-family);
    letter-spacing: 2px;
}

.product-showcase img{
     display: block;
    width: 100%;
    max-width: 847px;
    margin-inline: auto;
}

.arrow {
  font-size: 16px;
  transition: transform 0.3s ease;
}

.shop-button:hover .arrow {
  transform: translateX(5px);
}

/* Product Showcase */
.product-showcase {
  position: relative;
  animation: fadeInUp 0.8s ease-out 0.8s both;
}

.product-container {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: flex-end;
  gap: -20px;
  height: 400px;
}

.product-item {
  position: relative;
  transition: transform 0.4s ease;
  filter: drop-shadow(0 20px 40px rgba(0,0,0,0.1));
}

.product-item:hover {
  transform: translateY(-10px) scale(1.05);
}

.product-item img {
  height: auto;
  max-height: 350px;
  width: auto;
  object-fit: contain;
}

.product-1 {
  z-index: 3;
  animation: float 3s ease-in-out infinite;
}

.product-2 {
  z-index: 4;
  margin-top: -30px;
  animation: float 3s ease-in-out infinite 0.5s;
}

.product-3 {
  z-index: 2;
  animation: float 3s ease-in-out infinite 1s;
}

/* Botanical Elements */
.botanical {
  position: absolute;
  z-index: 1;
  animation: botanicalFloat 4s ease-in-out infinite;
}

.botanical img {
  width: 60px;
  height: auto;
  opacity: 0.8;
}

.botanical-1 {
  top: -20px;
  left: -30px;
  animation-delay: 0s;
}

.botanical-3 {
  bottom: 20px;
  right: -25px;
  animation-delay: 2s;
}




/* Responsive Design */
@media (max-width: 768px) {
 .main-heading .heading-line-1{
 font-size:24px;
}
 .main-heading .heading-line-2{
 font-size:32px;
}
  
  .product-container {
 
    flex-direction: column;
    gap: 10px;
  }
  
  .product-item {
    position: relative;
    margin: 0;
  }
 
  

  .subtext p {
    font-size: 13px;
  }
  
  .shop-button {
    font-size: 12px;
  }
}

</style>

{% schema %}
{
  "name": "Tea Hero Section",
  "settings": [
    {
      "type": "text",
      "id": "rating",
      "label": "Rating",
      "default": "4.9/5"
    },
    {
      "type": "text",
      "id": "review_count",
      "label": "Review Count",
      "default": "50K+"
    },
    {
      "type": "text",
      "id": "heading_line_1",
      "label": "Heading Line 1",
      "default": "NO RITUALS. NO RULES."
    },
    {
      "type": "text",
      "id": "heading_line_2",
      "label": "Heading Line 2",
      "default": "JUST TEA."
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Urban blends. Designer experience. Pure taste, no baggage."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "SHOP TEAS"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL"
    },
    {
      "type": "image_picker",
      "id": "product_image_1",
      "label": "Image 1"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Image 2"
    }
  ],
  "presets": [
    {
      "name": "Tea Hero Section"
    }
  ]
}
{% endschema %}